{
  "private": true,
  "license": "BSD-3-Clause",
  "workspaces": [
    "cli"
  ],
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "fix": "npm-run-all --continue-on-error fix:*",
    "fix:eslint": "eslint --fix \"**/*\"",
    "fix:markdownlint": "markdownlint --fix \"**/*\"",
    "fix:prettier": "prettier --write \"**/*\"",
    "fix:yarn-deduplicate": "yarn install && yarn-deduplicate --strategy=fewer && yarn install",
    "lint": "npm-run-all --continue-on-error lint:*",
    "lint:eslint": "eslint \"**/*\" --report-unused-disable-directives",
    "lint:markdownlint": "markdownlint \"**/*\"",
    "lint:prettier": "prettier --check \"**/*\"",
    "lint:tsc": "tsc --project .",
    "lint:yarn-deduplicate": "yarn-deduplicate --fail --list --strategy=fewer",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "run-if-changed",
      "post-checkout": "run-if-changed",
      "post-merge": "run-if-changed",
      "post-rewrite": "run-if-changed"
    }
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@kachkaev/react-inline-js": "^0.1.0",
    "hosted-git-info": "^3.0.5",
    "lru-cache": "^6.0.0",
    "next": "^9.5.3",
    "node-fetch": "^2.6.1",
    "react": "^17.0.0-rc.1",
    "react-dom": "^17.0.0-rc.1",
    "styled-components": "^5.2.0",
    "styled-normalize": "^8.0.7",
    "unfetch": "^4.1.0",
    "url": "^0.11.0",
    "use-dark-mode": "^2.3.1"
  },
  "devDependencies": {
    "@hkdobrev/run-if-changed": "^0.3.1",
    "@kachkaev/eslint-config-react": "^0.1.1",
    "@kachkaev/markdownlint-config": "^0.1.0",
    "@kachkaev/prettier-config": "^1.0.0",
    "@types/hosted-git-info": "^3.0.0",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.6.4",
    "@types/node-fetch": "^2.5.7",
    "@types/styled-components": "^5.1.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "markdownlint-cli": "^0.23.2",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "typescript": "^3.9.7",
    "yarn-deduplicate": "^3.0.0"
  },
  "run-if-changed": {
    "yarn.lock": "yarn install --prefer-offline --pure-lockfile"
  }
}
